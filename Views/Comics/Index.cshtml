@model IEnumerable<ExamenComicsAWS.Models.Comic>

@{
    ViewData["Title"] = "Index";
    string bucketUrl = configuration.GetValue<string>("AWS:BucketUrl");
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdComic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdComic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <img src="@bucketUrl@item.Imagen" style="width:100px;height:100px"/>
            </td>
        </tr>
}
    </tbody>
</table>
